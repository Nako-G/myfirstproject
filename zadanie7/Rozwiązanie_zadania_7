def main():
    x = 1
    y = 0
    print("Wprowadź wartośći liczbowe:")
    while x != 0:
        try:
            x = float(input(""))
            y += x
            if x == 0:
                print("Suma wpisanych liczb wynosi:", y)
        except ValueError:
            print("To nie jest liczba!")
main()
